{
  "name": "Loki",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "loki",
    "pretest-ci": "npm run update-loki && node node_modules/react-native/local-cli/cli.js run-ios",
    "test-ci": "loki test ios",
    "storybook": "storybook start -p 7007",
    "update-loki": "LOKI_FILE=`cd ../.. && echo \\`pwd\\`/\\`npm pack\\`` && npm install $LOKI_FILE --no-save && rm $LOKI_FILE"
  },
  "dependencies": {
    "react": "16.0.0-alpha.12",
    "react-native": "0.46.1"
  },
  "devDependencies": {
    "@storybook/react-native": "^3.1.8",
    "babel-preset-react-native": "2.1.0",
    "loki": "*"
  },
  "loki": {
    "configurations": {
      "ios.iphone7": {
        "target": "ios.simulator"
      },
      "android.pixel": {
        "target": "android.emulator"
      }
    }
  }
}
